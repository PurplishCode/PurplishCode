// Conditioning with ! (NOT) Logical Operator "!()"
// If it's boolean value is true -> false, vice versa.

let temp = 15;
let rainy = true;

if(!(temp > 14)) { // Is temp NOT greater than 14?
    console.log("False");
} else {
    console.log("True");
} // Output True.

if(!rainy) {
    console.log("It's raining outside!");
} else {
    console.log("It's not raining outside.");
}

