// JS SYNTAX FILE

function callNumber(width, height) {
return width * height;
}

// Breaking the code!
// Jadi kita akan membuat suatu function callNumber, berisikan parameters width dan height. Didalam function curly brackets nya.
// Kita akan mengembalikan kondisi width * height kembali ke function.
// Lalu kita buat kondisi DOM onclick, berisikan dengan input value dari user (width dan height) lalu mengubah nya menjadi numerics.
// Setelah itu, kita akan memanggil kembali function didalam variable, function akan memanggil kembali pengkondisian yang sudah kita buat (width * height) dengan menambahkan arguments didalam parenthesses function(argument)
// Lalu kita gunakan pengkondisian tersebut (function yang sudah terpanggil menggunakan variable) dan membuat hasil nya.

document.getElementById("myButton").onclick = function() {
    width = document.getElementById("inputWidth").value;
    height = document.getElementById("inputHeight").value;

    width = Number(width);
    height = Number(height);

    let radius = callNumber(width, height);

    document.getElementById("afterRange").innerHTML = "Count is: " + radius;
    
}
