// JS SYNTAX FILE

function callCount() {
    let symbols = window.prompt("Enter Symbols of Value");

    let count = document.getElementById("inputValue").value;
    for(let j=1; j <= count; j+=1) {
    document.getElementById("count0").innerHTML += symbols;
    }

    clickAt(count);
}

document.getElementById("myButton").onclick = function clickAt(count, symbols) {
    count = Number(count);

    
    callCount();
}
