// JS FILE

// Pengkondisian menggunakan DOM, dan attribute .checked untuk melihat value T or F dari checkbox.
document.getElementById("myButton").onclick = function() {
    const checkBox = document.getElementById("myCheckbox");
    if(checkBox.checked) {
     document.getElementById("subscribeAfter").innerHTML = "You're subscribed!";
    } else {
        document.getElementById("subscribeAfter").innerHTML = "You're not subscribed.";
    }
}

// Check Property with Conditioning.

document.getElementById("mySubmit").onclick = function() {
    const paypalBtn = document.getElementById("paypalBtn");
    const visaBtn = document.getElementById("visaBtn");
    const masterBtn = document.getElementById("masterBtn");

    if(paypalBtn.checked) {
        console.log("You're paying with Paypal!");
    } else if(visaBtn.checked) {
        console.log("You're paying with Visa!");
    } else if(masterBtn.checked) {
        console.log("You're paying with MasterCard!");
    } else {
        console.log("Please Select Your Payment.");
    }
}
