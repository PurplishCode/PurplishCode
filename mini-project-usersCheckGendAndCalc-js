// JS FILE

let userName;

document.getElementById("tombolInput").onclick = function() {
     userName = document.getElementById("namaInput").value;
     userName = userName.replaceAll("-", "");
     checkGender = document.getElementById("changeGender");
     checkGender2 = document.getElementById("changeGender1");

    if(checkGender.checked) {
        document.getElementById("resultGender").innerHTML = "You're a male!";
    } else if(checkGender2.checked) { 
    document.getElementById("resultGender").innerHTML = "You're a female!";
    } else {
        console.log("Properly select your gender.");
    }
    if(userName.trim() === "") {
    console.log("Properly insert your name.");
    } else {
        document.getElementById("resultName").innerHTML = "Your name is: " + userName;
    }
}

document.getElementById("buttonSubmit").onclick = function() {
    let a;
    let b;
    let c;

    a = document.getElementById("insertBoxA").value;
    a = Number(a);

    b = document.getElementById("insertBoxB").value;
    b = Number(b);
    c = Math.sqrt(Math.pow(a, 2) + Math.pow(b, 2));

    c = Math.floor(c);

    document.getElementById("afterC").innerHTML = "Square root of Field A and B:" + c;
}
