// String .slice("First index", "Designated index") Mengekstrak suatu string tanpa memodifikasi string tersebut.



let nama = "Darell Daffa";
let fullNama = "Darell Daffa Fawwas";


firstName = nama.slice(0, nama.indexOf(" "));
lastName = fullNama.slice(fullNama.indexOf(" ") + 1); // Ini akan memotong fullNama, lalu hanya memberikan value setelah empty spaces menggunkan + 1.
//nama = nama.slice(7, 12);

console.log(firstName);
console.log(lastName);
